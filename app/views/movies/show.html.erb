
<div>
  <table>
    <tr>
      <th style="width:300px" >
        <p style="text-align:left">
          <%= image_tag(@movie.img_url, :alt => "pic", :size => "200x300") %>
        </p>


        <p style="text-align:left">
          <strong>Title:</strong>
          <%= @movie.title %>
        </p>
        <p style="text-align:left">
          <strong>Description:</strong>
          <%= @movie.description %>
        </p>

        <p style="text-align:left">
          <strong>Movie length:</strong>
          <%= @movie.movie_length %>
        </p>

        <p style="text-align:left">
          <strong>Director:</strong>
          <%= @movie.director %>
        </p>

        <p style="text-align:left">
          <strong>Rating:</strong>
          <%= @movie.rating %>
        </p>
        <p style="text-align:left">
          <%= link_to 'Edit', edit_movie_path(@movie) %> |
          <%= link_to 'Back', movies_path %>

        </p>
      </th>
      <th style="vertical-align:top">
        <h1>Reviews </h1>
        <% if @reviews.blank? %>
          <h3>No reviews yet, Be first rating this movie! </h3>
          <%= link_to "Write a  Review", new_movie_review_path(@movie) %>
        <% else %>
          <% @reviews.each do |review| %>
            <div style="text-align:left" >
              <div> <%= review.rating %></div>
              <div> <%=review.comment %></div><br></br>
            </div>
          <% end %>
        <% end %>
      </th>
    </tr>
    <tr>
      <th style="text-align:left"> <%= link_to "Write a  Review", new_movie_review_path(@movie) %></th>
      <th>

      </th>

    </tr>
  </table>

</div>

<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js">
    $('.star-rating').raty({
        readOnly: true,
        score: function() {
            return $(this).attr('data-score');
        },
        path: '/assets/'
    });
</script>

