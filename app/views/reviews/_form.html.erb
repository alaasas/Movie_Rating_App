<div class="container">
<div class="row">
<div class="col new_movie_col">
<h2 class="review-head">Share your thoughts!</h2>

<%= form_for([@movie, @review]) do |form| %>
  <% if @review.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:</h2>

      <ul>
        <% @review.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3  review-head">
    <%= form.label :Rating, :class => "form-label" %>
    <%= form.select :rating,options_for_select([1, 2, 3, 4, 5]), :class => "form-control", :required => true %>
  </div>
  
  <div class="mb-3  review-head">
    <%= form.label :Comment, :class => "form-label" %>
    <%= form.text_area :comment, :class => "form-control", :required => true %>
  </div>

  <div class="mb-3 form-check  review-head">
    <%= form.check_box :recommend,:class => "form-check-input", :required => true %>
    <%= form.label :recommend, "Must watch?", :class =>"form-check-label" %>
  </div>

  <div class="actions  review-head">
    <%= form.submit 'Submit review', :class => "btn btn-primary" %>
  </div>
<% end %>


</div>
<div class="col new_movie_col">

</div>
</div>
</div>


